{
    "compilerOptions": {
        "alwaysStrict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "target": "es2020", // required for bigint
        "declaration": false,
        "noEmitOnError": true,
        "allowJs": true,
        // "sourceMap": true,
        // "inlineSourceMap": false,
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}